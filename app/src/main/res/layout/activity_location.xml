<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="6dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="com.example.prasangafernando.couriertest3.SendData">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Location"
        android:id="@+id/btn_send"
        android:onClick="onReg"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/et_longitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_latitude"
        android:hint="Latitude"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_longitude"
        android:hint="Longitude"
        android:layout_below="@+id/et_latitude"
        android:layout_alignLeft="@+id/et_latitude"
        android:layout_alignStart="@+id/et_latitude" />

    <Button
        android:id="@+id/btn_sendLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onReg"
        android:text="Send GPS Location"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btn_getLocation"
        android:layout_alignRight="@+id/btn_getLocation"
        android:layout_alignEnd="@+id/btn_getLocation" />

    <Button
        android:id="@+id/btn_getLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Recorrect Location"
        android:layout_below="@+id/btn_send"
        android:layout_alignRight="@+id/et_longitude"
        android:layout_alignEnd="@+id/et_longitude"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />
</RelativeLayout>